<div id="grindingwheel" class="easyui-panel" style="padding:5px;width:100%;height:100%" data-options="border:false,iconCls:'icon-search',collapsible:true">
	<table id="grindingwheeldg" width="99%"  
		pageSize="20" 
		toolbar="#grindingwheel #toolbar" 
		pagination="true"
		rownumbers="true" 
		fitColumns="true" 
		singleSelect="true"		
	>
		<thead>
			<tr>
				<th data-options="field:'d',width:10">D</th>
				<th data-options="field:'t',width:10">T</th>
				<th data-options="field:'h',width:10">H</th>
				<th data-options="field:'e',width:10">E</th>
				<th data-options="field:'f',width:10">F</th>
				<th data-options="field:'g',width:10">G</th>
				<th data-options="field:'p1',width:10">P1</th>
				<th data-options="field:'p2',width:10">P2</th>
				<th data-options="field:'shape',width:20">形狀</th>				
			</tr>
		</thead>
	</table>	
	<br/>
    <div id="toolbar">
        <a href="javascript:void(0)" id="addbtn" class="easyui-linkbutton" iconCls="icon-add" plain="true">新增</a>
        <a href="javascript:void(0)" id="modifybtn" class="easyui-linkbutton" iconCls="icon-edit" plain="true">修改</a>
        <a href="javascript:void(0)" id="delbtn" class="easyui-linkbutton" iconCls="icon-remove" plain="true">刪除</a>
    </div>	
		
	<div id="grindingwheeldlg" class="easyui-dialog" title="客戶基本資料" style="width:400px;height:350px;padding:10px 20px" closed="true" buttons="#dlg-buttons">		
		<form id="fm" method="post" novalidate>
			<div class="fitem">
				<table style="padding:5px">
					<tr><th>D</th><td><input name="d" class="easyui-numberbox"></td></tr>
					<tr><th>T</th><td><input name="t" class="easyui-numberbox"></td></tr>
					<tr><th>H</th><td><input name="h" class="easyui-numberbox"></td></tr>
					<tr><th>E</th><td><input name="e" class="easyui-numberbox"></td></tr>
					<tr><th>F</th><td><input name="f" class="easyui-numberbox"></td></tr>
					<tr><th>G</th><td><input name="g" class="easyui-numberbox"></td></tr>
					<tr><th>P1</th><td><input name="p1" class="easyui-numberbox"></td></tr>
					<tr><th>P2</th><td><input name="p2" class="easyui-numberbox"></td></tr>
					<tr><th>形狀</th><td><input name="shape" class="easyui-textbox" required="true"></td></tr>									
				</table>					
			</div>			
		</form>
	</div>
	<div id="dlg-buttons">
		<a href="javascript:void(0)" id="savebtn" class="easyui-linkbutton c6" iconCls="icon-ok" style="width:90px">Save</a>
		<a href="javascript:void(0)" id="closebtn" class="easyui-linkbutton" iconCls="icon-cancel" style="width:90px">Cancel</a>
	</div>
</div>	
<script type="text/javascript">
	(function(){		
		var url = "";
		var panel = $("#grindingwheel");
		var toolbar = panel.find("#toolbar");
		var dlg = $("#grindingwheeldlg");
		var grid = $("#grindingwheeldg");
		
		var dg = grid.datagrid({
			url: 'Action/grindingwheel/list',
			pagination: true,
			remoteFilter: true,
			rownumbers: true
		});
		
		$("#grindingwheeldg").datagrid('enableFilter',[
			{field:'d',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'t',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'h',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'e',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'f',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'g',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'p1',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']},
			{field:'p2',type:'numberbox',options:{precision:2},op:['equal','notequal','less','greater']}
		]);
		
		toolbar.find("#addbtn").click(function(){
			dlg.dialog('open').dialog('center').dialog('setTitle','參數設定');
			dlg.find('#fm').form('clear');
			url = 'Action/grindingwheel/save';
		});
		
		toolbar.find("#modifybtn").click(function(){
			var row = grid.datagrid('getSelected');
			
			if (row){
				dlg.dialog('open').dialog('center').dialog('setTitle','參數設定');
				dlg.find('#fm').form('load',row);
				url = 'Action/grindingwheel/update?id='+row.id;
			}
		});
		
		toolbar.find("#delbtn").click(function(){
			var row = grid.datagrid('getSelected');
			if (row){
				$.messager.confirm('Confirm',',確定刪除該筆資料?',function(r){
					if (r){
						$.post('Action/grindingwheel/delete',{id:row.id},function(result){
							if (result.success){
								slide("刪除成功!");	
								grid.datagrid('reload');    // reload the user data
							} else {
								$.messager.show({    // show error message
									title: 'Error',
									msg: result.errorMsg
								});
							}
						},'json');
					}
				});
			}
		});
				
		panel.find("#savebtn").click(function(){
			$(dlg).find('#fm').form('submit',{
				url: url,
				onSubmit: function(){
					return $(this).form('validate');
				},
				success: function(result){
					var result = eval('('+result+')');
					if (result.errorMsg){
						$.messager.show({
							title: 'Error',
							msg: result.errorMsg
						});
					} else {
						slide(result.msg);
						dlg.dialog('close');        // close the dialog
						grid.datagrid('reload');    // reload the user data
					}
				}
			});
		});
		panel.find("#closebtn").click(function(){
			dlg.dialog('close');
		});		
	})()	
</script>